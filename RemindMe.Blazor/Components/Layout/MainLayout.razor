@inherits LayoutComponentBase

<MudThemeProvider/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        RemindMe.Razor
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
       <MudContainer MaxWidth=MaxWidth.Medium Style="height:100vh;" Class="d-flex justify-content-center">
           @Body
       </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    bool _drawerOpen = true;    

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
 }